<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="tupenca_mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:tupenca_mobile"
    Shell.FlyoutBehavior="Disabled"
    xmlns:view ="clr-namespace:tupenca_mobile">
    <!---->


    <ShellItem Route="main">
        <ShellContent ContentTemplate="{DataTemplate view:MainPage}" />
    </ShellItem>

    <TabBar  Route="list">
        <Tab  Title="Pencas">
            <ShellContent Title="Pencas Compartidas"
                         ContentTemplate="{DataTemplate view:ListPencaPage}"/>
            <ShellContent Title="Pencas Empresa"
                         ContentTemplate="{DataTemplate view:ListPencaPage}"/>
            <!--<ShellContent
        Title="Monkeys"
        ContentTemplate="{DataTemplate view:ListPencaPage}"
        Route="TherapyPage" />-->
        </Tab>
        <Tab  Title="Eventos">
            <ShellContent 
        Title="Proximos Eventos"
        ContentTemplate="{DataTemplate view:ProximosEventosPage}"
        Route="StatusPage" />
        </Tab>
    </TabBar>

</Shell>

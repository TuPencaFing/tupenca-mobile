<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="tupenca_mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:tupenca_mobile"
    Shell.FlyoutBehavior="Disabled"
    xmlns:view ="clr-namespace:tupenca_mobile">


    <ShellItem Route="main">
        <ShellContent ContentTemplate="{DataTemplate view:MainPage}" />
    </ShellItem>

    <ShellItem Route="list">
        <ShellContent Title="Pencas" ContentTemplate="{DataTemplate view:ListPencaPage}" />
    </ShellItem>

    <TabBar>
        <Tab Title="Penca" Route="details">
            <ShellContent Route = "ranking" Title="Ranking"
                         ContentTemplate="{DataTemplate view:DetailsPage}"/>
            <ShellContent Route = "proximosEventos" Title="Proximos Eventos"
                         ContentTemplate="{DataTemplate view:ProximosEventosPage}"/>

        </Tab>
        <Tab  Title="Profile">
            <ShellContent Route="profile" Title="Pencas" ContentTemplate="{DataTemplate view:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
